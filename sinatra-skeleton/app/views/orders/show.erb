<div class = "container">
   <div class = "jumbotron1">
      <h2>Order Details</h2>
      <div class = "jumbotron" id="card">
        <img class="food-icon"src="../../img/<%= @order.cuisine %>alter.jpg">
        <ul class="card-data-left">
          <li>Name:<%= @user.find(@order.orderer_id).username %></li>
          <li>Cusine:<%= @order.cuisine %></li>
          <li>Price range:<%= @order.price %></li>
          <li>Address:<%= @order.destination %></li>
          <li>Delivery date:<%= @order.delivery_date %></li>
          <li>Time: <%= @order.delivery_time %></li>
        </ul>
        <div class="card-data-right">
          <p>
            Comments: <%= @order.comment %>
          </p>
        </div>
      </div>
   </div>
</div>
